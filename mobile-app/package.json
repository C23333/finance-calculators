{
  "name": "fincalc-mobile",
  "version": "1.0.0",
  "description": "FinCalc Mobile App - iOS & Android",
  "scripts": {
    "build:web": "node build-web.js",
    "cap:init": "npx cap init FinCalc cc.financecalc.app --web-dir www",
    "cap:add:android": "npx cap add android",
    "cap:add:ios": "npx cap add ios",
    "cap:sync": "npx cap sync",
    "cap:open:android": "npx cap open android",
    "cap:open:ios": "npx cap open ios",
    "build:android": "npm run build:web && npx cap sync android",
    "build:ios": "npm run build:web && npx cap sync ios"
  },
  "dependencies": {
    "@capacitor/android": "^5.0.0",
    "@capacitor/core": "^5.0.0",
    "@capacitor/ios": "^5.0.0",
    "@capacitor/splash-screen": "^5.0.0",
    "@capacitor/status-bar": "^5.0.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^5.0.0"
  }
}
